---
// src/components/ui/Footer.astro
import { ShieldCheck, Mail, Info } from 'lucide-astro';
import { TOOLS, type Tool } from '../../config/tools';

const categoryLabels: Record<string, string> = {
  json: "Data & JSON",
  dev: "Development",
  ai: "AI Powered",
  css: "Design & CSS",
  data: "Data Conversion"
};

const groupedTools = TOOLS.reduce((acc, tool) => {
  if (!acc[tool.category]) acc[tool.category] = [];
  acc[tool.category].push(tool);
  return acc;
}, {} as Record<string, Tool[]>);

const categories = Object.keys(groupedTools);
---

<footer class="border-t border-slate-800 bg-slate-950 mt-auto">
  <div class="max-w-6xl mx-auto px-4 py-10 md:py-16">
      <div class="grid grid-cols-1 lg:grid-cols-6 gap-10 md:gap-12 mb-12">
          <div class="col-span-1 lg:col-span-2">
              <a href="/" class="flex items-center gap-2 mb-4 group w-fit no-underline">
                  <span class="text-xl font-bold text-white tracking-tight">Syntax<span class="text-[#27b4f2]">Snap</span></span>
              </a>
              <p class="text-base text-slate-300 max-w-sm leading-relaxed mt-2">
                  High-performance, local-first utilities for modern developers. Built with privacy as a priority and speed as a requirement.
              </p>
          </div>

          <div class="col-span-1 lg:col-span-3 columns-1 sm:columns-2 gap-8">
            {categories.map((cat) => (
              <div class="break-inside-avoid mb-10">
                <h2 class="text-xs font-bold text-slate-300 uppercase tracking-widest mb-4">
                  {categoryLabels[cat] || cat}
                </h2>
                <ul class="space-y-4 sm:space-y-3 text-sm text-slate-400 font-mono">
                  {groupedTools[cat].sort((a, b) => a.title.localeCompare(b.title)).map((tool) => (
                    <li>
                      <a href={tool.href} class={`transition-colors hover:text-white block sm:inline ${tool.category === 'ai' ? 'text-emerald-400/90' : 'text-slate-300'}`}>
                        {tool.title}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>

          <div class="col-span-1">
            <h3 class="text-sm font-bold text-slate-300 uppercase tracking-widest mb-4">Support</h3>
            <ul class="space-y-4 sm:space-y-3 text-sm text-slate-300">
                <li><a href="/about" class="hover:text-[#27b4f2] transition-colors flex items-center gap-2"><Info class="w-4 h-4"/> Our Story</a></li>
                <li><a href="/contact" class="hover:text-[#27b4f2] transition-colors flex items-center gap-2"><Mail class="w-4 h-4"/> Contact</a></li>
                <li><a href="/offline" class="hover:text-[#27b4f2] transition-colors flex items-center gap-2">Self-Host <span class="text-[12px] bg-slate-800 px-2 py-0.5 rounded text-slate-300 border border-slate-700 font-bold uppercase">NEW</span></a></li>
                <li><a href="/privacy" class="hover:text-[#27b4f2] transition-colors">Privacy</a></li>
                <li><a href="/terms" class="hover:text-[#27b4f2] transition-colors">Terms</a></li>
            </ul>
          </div>
      </div>
      
      <div class="border-t border-slate-900 pt-8 flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-slate-400 text-center md:text-left">
          <div class="flex items-center gap-2">
            <ShieldCheck class="w-5 h-5 text-[#27b4f2]/50" />
            <p>&copy; {new Date().getFullYear()} SyntaxSnap. All rights reserved.</p>
          </div>
          <p class="flex items-center justify-center gap-1.5">
            Built with ❤️ in <span class="text-slate-200 font-medium">Cuddalore</span> for the global community.
          </p>
      </div>
  </div>
</footer>