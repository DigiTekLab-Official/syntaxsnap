---
// src/components/ui/Footer.astro
import { ShieldCheck } from 'lucide-astro';
import { TOOLS, type Tool } from '../../config/tools';

// Define the category display names
const categoryLabels: Record<string, string> = {
  json: "Data & JSON",
  dev: "Development",
  ai: "AI Powered",
  css: "Design & CSS",
  data: "Data Conversion"
};

// Group tools by category
const groupedTools = TOOLS.reduce((acc, tool) => {
  if (!acc[tool.category]) acc[tool.category] = [];
  acc[tool.category].push(tool);
  return acc;
}, {} as Record<string, Tool[]>);

const categories = Object.keys(groupedTools);
---

<footer class="border-t border-slate-800 bg-slate-950 mt-auto">
  <div class="max-w-6xl mx-auto px-4 py-16">
      <div class="grid grid-cols-1 md:grid-cols-6 gap-12 mb-12">
          
          {/* Brand Info - Spans 2 columns */}
          <div class="col-span-1 md:col-span-2">
              <a href="/" class="flex items-center gap-2 mb-4 group w-fit" aria-label="SyntaxSnap home">
                  <img src="/icon.svg" alt="SyntaxSnap Logo" width="24" height="24" class="w-6 h-6 object-contain group-hover:scale-105 transition-transform" />
                  <span class="text-xl font-bold text-white tracking-tight">Syntax<span class="text-indigo-500">Snap</span></span>
              </a>
              <p class="text-base text-slate-400 max-w-sm leading-relaxed">
                  High-performance, local-first utilities for modern developers. Built with privacy as a priority and speed as a requirement.
              </p>
          </div>

          {/* Dynamic Utilities Columns - Swapped to columns layout for masonry stacking */}
          <div class="col-span-1 md:col-span-3 columns-1 sm:columns-2 gap-8">
            {categories.map((cat) => (
              <div class="break-inside-avoid mb-10">
                <h2 class="text-xs font-bold text-slate-500 uppercase tracking-widest mb-4">
                  {categoryLabels[cat] || cat}
                </h2>
                <ul class="space-y-3 text-sm text-slate-400 font-mono">
                  {groupedTools[cat].sort((a, b) => a.title.localeCompare(b.title)).map((tool) => (
                    <li>
                      <a 
                        href={tool.href} 
                        class={`transition-colors hover:text-white ${tool.category === 'ai' ? 'text-emerald-400/80' : 'text-slate-300'}`}
                      >
                        {tool.title}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>

          {/* Company/Misc Column - Spans 1 column */}
          <div class="col-span-1">
            <h3 class="text-sm font-bold text-slate-500 uppercase tracking-widest mb-4">Support</h3>
            <ul class="space-y-3 text-sm text-slate-400">
                <li><a href="/about" class="hover:text-indigo-400 transition-colors">Our Story</a></li>
                <li><a href="/offline" class="hover:text-indigo-400 transition-colors flex items-center gap-2">Self-Host <span class="text-xs bg-slate-800 px-2 py-0.5 rounded text-slate-300 border border-slate-700">New</span></a></li>
                <li><a href="/privacy" class="hover:text-indigo-400 transition-colors">Privacy</a></li>
                <li><a href="/terms" class="hover:text-indigo-400 transition-colors">Terms</a></li>
            </ul>
          </div>
      </div>
      
      <div class="border-t border-slate-900 pt-8 flex flex-col md:flex-row justify-between items-center gap-6 text-sm text-slate-500">
          <div class="flex items-center gap-2">
            <ShieldCheck class="w-5 h-5 text-indigo-500/50" />
            <p>&copy; {new Date().getFullYear()} SyntaxSnap. All rights reserved.</p>
          </div>
          <p class="flex items-center gap-1.5">
            Built with ❤️ in <span class="text-slate-300 font-medium">Cuddalore</span> for the global community.
          </p>
      </div>
  </div>
</footer>