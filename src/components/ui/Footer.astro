---
// src/components/ui/Footer.astro
import { ShieldCheck } from 'lucide-astro';
import Logo from './Logo.astro';
import { TOOLS } from '../../config/tools';

// Sort tools alphabetically for a clean professional look
const sortedTools = [...TOOLS].sort((a, b) => a.title.localeCompare(b.title));
---

<footer class="border-t border-slate-800 bg-slate-950 mt-auto">
  <div class="max-w-6xl mx-auto px-4 py-16">
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-12 mb-12">
          
          <div class="col-span-1 md:col-span-2">
              <div class="flex items-center gap-2 mb-4">
                  <Logo class="w-6 h-6" />
                  <span class="text-xl font-bold text-white tracking-tight">Syntax<span class="text-indigo-500">Snap</span></span>
              </div>
              <p class="text-base text-slate-400 max-w-sm leading-relaxed">
                  High-performance, local-first utilities for modern developers. Built with privacy as a priority and speed as a requirement.
              </p>
          </div>

          <div>
              <h2 class="text-sm font-bold text-slate-500 uppercase tracking-widest mb-4">Utilities</h2>
              <ul class="space-y-3 text-base text-slate-400 font-mono">
                  {sortedTools.map((tool) => (
                    <li>
                      <a 
                        href={tool.href} 
                        class={`transition-colors ${tool.category === 'ai' ? 'hover:text-emerald-400' : 'hover:text-indigo-400'}`}
                      >
                        {tool.title}
                      </a>
                    </li>
                  ))}
              </ul>
          </div>

          <div>
            <h3 class="text-sm font-bold text-slate-500 uppercase tracking-widest mb-4">Company</h3>
            <ul class="space-y-3 text-base text-slate-400">
                <li><a href="/about" class="hover:text-indigo-400 transition-colors">Our Story</a></li>
                <li><a href="/offline" class="hover:text-indigo-400 transition-colors flex items-center gap-2">Self-Host <span class="text-sm bg-slate-800 px-2 py-0.5 rounded text-slate-300 border border-slate-700">New</span></a></li>
                <li><a href="/privacy" class="hover:text-indigo-400 transition-colors">Privacy</a></li>
                <li><a href="/terms" class="hover:text-indigo-400 transition-colors">Terms</a></li>
            </ul>
          </div>
      </div>
      
      <div class="border-t border-slate-900 pt-8 flex flex-col md:flex-row justify-between items-center gap-6 text-sm text-slate-500">
          <div class="flex items-center gap-2">
            <ShieldCheck class="w-5 h-5 text-indigo-500/50" />
            <p>&copy; {new Date().getFullYear()} SyntaxSnap. All rights reserved.</p>
          </div>
          <p class="flex items-center gap-1.5">
            Built with ❤️ in <span class="text-slate-300 font-medium">Cuddalore</span> for the global community.
          </p>
      </div>
  </div>
</footer>