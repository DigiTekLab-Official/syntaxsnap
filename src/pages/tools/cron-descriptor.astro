---
import Layout from '../../layouts/Layout.astro';
import CronDescriptorTool from '../../components/tools/CronDescriptor';
import RelatedTools from '../../components/ui/RelatedTools.astro';
import { buildFAQPage } from '../../utils/schema';

const title = "Cron Expression Translator & Scheduler | SyntaxSnap";
const description = "Free crontab expression translator. Convert cron syntax to human-readable text and preview next run times. Supports Linux, Unix, and Quartz cron formats. 100% client-side.";
const slug = "cron-descriptor";
const features = [
  "Human-readable cron translation",
  "Next run time predictions with timezone",
  "12 quick cron presets",
  "Field-by-field breakdown",
  "Real-time syntax validation",
  "Copy translated output",
  "100% client-side processing"
];

// SEO: FAQPage — visible answers supported by page content
const faqSchema = buildFAQPage([
  {
    question: "What is a cron expression?",
    answer: "A cron expression is a string of 5 or 6 fields separated by spaces that represents a schedule for executing recurring tasks in Unix-like systems. The fields are: minute (0-59), hour (0-23), day of month (1-31), month (1-12), and day of week (0-7, where 0 and 7 are Sunday)."
  },
  {
    question: "What does * mean in cron?",
    answer: "The asterisk (*) in a cron expression means 'every' or 'any'. For example, '* * * * *' means 'every minute of every hour of every day'. '0 * * * *' means 'at minute 0 of every hour' (on the hour)."
  },
  {
    question: "How do I schedule a cron job to run every day at midnight?",
    answer: "Use the cron expression '0 0 * * *'. This means: minute 0, hour 0 (midnight), every day of the month, every month, every day of the week."
  },
  {
    question: "What timezone are the next run times shown in?",
    answer: "Next run times are displayed in your local system timezone as detected by your browser. The timezone is shown below the list of upcoming runs."
  },
  {
    question: "Does this tool support seconds in cron expressions?",
    answer: "The standard Unix cron format uses 5 fields (minute through day of week). Some systems like Quartz scheduler support 6-field expressions with seconds as the first field. This tool supports the standard 5-field format."
  }
]);
---

<Layout title={title} description={description} isTool={true} slug={slug} features={features}>
  {/* SEO: FAQPage schema — questions answered by on-page educational content */}
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <div class="max-w-6xl mx-auto px-4 py-12">

    <div class="mb-10 text-center">
      <h1 class="text-4xl font-extrabold text-white mb-4 tracking-tight">
        Cron Expression Translator
      </h1>
      <p class="text-slate-400 text-lg max-w-2xl mx-auto">
        Convert cron syntax to plain English and preview when your scheduled jobs will run.
        <strong class="text-sky-400"> 100% private</strong> — runs entirely in your browser.
      </p>
    </div>

    <CronDescriptorTool client:load />

    {/* Educational Content & SEO */}
    <div class="mt-20 border-t border-slate-800 pt-16">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        
        {/* Cron Format Guide */}
        <div>
          <h2 class="text-2xl font-bold text-white mb-4">Understanding Cron Format</h2>
          <p class="text-slate-400 mb-4 text-sm leading-relaxed">
            A cron expression consists of 5 fields separated by spaces. Each field represents a time unit:
          </p>
          <pre class="bg-slate-900 border border-slate-800 rounded-xl p-4 text-sm font-mono text-emerald-400 leading-relaxed overflow-x-auto">
* * * * *
│ │ │ │ │
│ │ │ │ └─ Day of Week (0-7, Sun=0 or 7)
│ │ │ └─── Month (1-12 or JAN-DEC)
│ │ └───── Day of Month (1-31)
│ └─────── Hour (0-23)
└───────── Minute (0-59)</pre>

          <div class="mt-6">
            <h3 class="text-lg font-bold text-white mb-3">Special Characters</h3>
            <dl class="space-y-3 text-sm">
              <div class="flex items-start gap-3">
                <dt class="font-mono text-indigo-400 font-bold shrink-0">*</dt>
                <dd class="text-slate-400"><strong class="text-slate-200">Any value.</strong> In the hour field, * means every hour.</dd>
              </div>
              <div class="flex items-start gap-3">
                <dt class="font-mono text-indigo-400 font-bold shrink-0">/</dt>
                <dd class="text-slate-400"><strong class="text-slate-200">Step values.</strong> */5 in the minute field means every 5 minutes.</dd>
              </div>
              <div class="flex items-start gap-3">
                <dt class="font-mono text-indigo-400 font-bold shrink-0">-</dt>
                <dd class="text-slate-400"><strong class="text-slate-200">Range.</strong> 1-5 in the day-of-week field means Monday through Friday.</dd>
              </div>
              <div class="flex items-start gap-3">
                <dt class="font-mono text-indigo-400 font-bold shrink-0">,</dt>
                <dd class="text-slate-400"><strong class="text-slate-200">List.</strong> 1,15,30 in the minute field means at minutes 1, 15, and 30.</dd>
              </div>
            </dl>
          </div>
        </div>

        {/* Common Examples */}
        <div class="bg-slate-900/40 border border-slate-800 p-6 rounded-2xl">
          <h2 class="text-2xl font-bold text-white mb-4">Common Cron Patterns</h2>
          <ul class="space-y-3 text-sm">
            <li class="flex items-center justify-between gap-4 pb-3 border-b border-slate-800">
              <code class="text-sky-400 font-mono text-xs bg-sky-400/10 px-2 py-1 rounded shrink-0">* * * * *</code>
              <span class="text-slate-400">Every minute</span>
            </li>
            <li class="flex items-center justify-between gap-4 pb-3 border-b border-slate-800">
              <code class="text-sky-400 font-mono text-xs bg-sky-400/10 px-2 py-1 rounded shrink-0">*/5 * * * *</code>
              <span class="text-slate-400">Every 5 minutes</span>
            </li>
            <li class="flex items-center justify-between gap-4 pb-3 border-b border-slate-800">
              <code class="text-sky-400 font-mono text-xs bg-sky-400/10 px-2 py-1 rounded shrink-0">0 * * * *</code>
              <span class="text-slate-400">Every hour (on the hour)</span>
            </li>
            <li class="flex items-center justify-between gap-4 pb-3 border-b border-slate-800">
              <code class="text-sky-400 font-mono text-xs bg-sky-400/10 px-2 py-1 rounded shrink-0">0 */6 * * *</code>
              <span class="text-slate-400">Every 6 hours</span>
            </li>
            <li class="flex items-center justify-between gap-4 pb-3 border-b border-slate-800">
              <code class="text-sky-400 font-mono text-xs bg-sky-400/10 px-2 py-1 rounded shrink-0">0 0 * * *</code>
              <span class="text-slate-400">Every day at midnight</span>
            </li>
            <li class="flex items-center justify-between gap-4 pb-3 border-b border-slate-800">
              <code class="text-sky-400 font-mono text-xs bg-sky-400/10 px-2 py-1 rounded shrink-0">0 9 * * 1-5</code>
              <span class="text-slate-400">Weekdays at 9 AM</span>
            </li>
            <li class="flex items-center justify-between gap-4 pb-3 border-b border-slate-800">
              <code class="text-sky-400 font-mono text-xs bg-sky-400/10 px-2 py-1 rounded shrink-0">0 0 1 * *</code>
              <span class="text-slate-400">First day of every month</span>
            </li>
            <li class="flex items-center justify-between gap-4 pb-3 border-b border-slate-800">
              <code class="text-sky-400 font-mono text-xs bg-sky-400/10 px-2 py-1 rounded shrink-0">0 0 * * 0</code>
              <span class="text-slate-400">Every Sunday at midnight</span>
            </li>
            <li class="flex items-center justify-between gap-4 pb-3 border-b border-slate-800">
              <code class="text-sky-400 font-mono text-xs bg-sky-400/10 px-2 py-1 rounded shrink-0">30 2 * * *</code>
              <span class="text-slate-400">Every day at 2:30 AM</span>
            </li>
            <li class="flex items-center justify-between gap-4">
              <code class="text-sky-400 font-mono text-xs bg-sky-400/10 px-2 py-1 rounded shrink-0">0 0 1 1 *</code>
              <span class="text-slate-400">January 1st at midnight</span>
            </li>
          </ul>
        </div>

      </div>
    </div>

    {/* Use Cases Section */}
    <div class="mt-16 bg-indigo-900/10 border border-indigo-500/20 rounded-2xl p-8">
      <h2 class="text-2xl font-bold text-white mb-6 text-center">Common Use Cases</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="text-center">
          <div class="w-12 h-12 bg-indigo-500/20 rounded-xl flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-indigo-400" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path></svg>
          </div>
          <h3 class="font-bold text-white mb-2">Automated Backups</h3>
          <p class="text-sm text-slate-400">Schedule daily database dumps, file syncs, or snapshot creation</p>
        </div>
        <div class="text-center">
          <div class="w-12 h-12 bg-indigo-500/20 rounded-xl flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-indigo-400" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="11" x="3" y="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
          </div>
          <h3 class="font-bold text-white mb-2">Report Generation</h3>
          <p class="text-sm text-slate-400">Generate weekly analytics, monthly invoices, or daily logs</p>
        </div>
        <div class="text-center">
          <div class="w-12 h-12 bg-indigo-500/20 rounded-xl flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-indigo-400" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path></svg>
          </div>
          <h3 class="font-bold text-white mb-2">System Maintenance</h3>
          <p class="text-sm text-slate-400">Clean temporary files, rotate logs, update dependencies</p>
        </div>
      </div>
    </div>

    <RelatedTools currentTool="cron-descriptor" />

  </div>
</Layout>