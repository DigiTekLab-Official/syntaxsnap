---
// src/pages/tools/openapi-mock.astro
import Layout from '../../layouts/Layout.astro';
import RelatedTools from '../../components/ui/RelatedTools.astro';

const title = "OpenAPI to Mock Server Generator | SyntaxSnap";
const description = "Instantly convert your FastAPI or OpenAPI v3 JSON specs into a runnable local mock server. 100% offline, privacy-first.";

// Tool-specific features for SoftwareApplication schema
const features = [
  "Instantly generates mock servers from OpenAPI JSON",
  "100% offline deterministic parsing (zero server uploads)",
  "Maps path parameters to standard syntax automatically",
  "Provides copy-pasteable zero-dependency boilerplate"
];

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Is this generator AI-powered?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "No. This tool uses a deterministic JavaScript parser to transform your OpenAPI paths. Since it doesn't use AI, it works 100% offline and your schema never leaves your browser."
      }
    },
    {
      "@type": "Question",
      "name": "What versions of OpenAPI are supported?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "The generator currently supports OpenAPI 3.0 and 3.1. It maps parameters, request bodies, and paths directly to standard server syntax."
      }
    },
    {
      "@type": "Question",
      "name": "Does it generate a full project structure?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "It generates a production-ready boilerplate including necessary imports, middleware setup, and route handlers based on your specific API endpoints."
      }
    }
  ]
};
---

<Layout title={title} description={description} isTool={true} features={features}>
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <div class="max-w-6xl mx-auto">
    <div class="mb-10 text-center">
      <h1 class="text-3xl md:text-5xl font-extrabold text-white mb-4 tracking-tight">OpenAPI to Mock Server</h1>
      <p class="text-slate-400 text-lg max-w-2xl mx-auto">
        Paste your OpenAPI v3 JSON below to instantly generate a zero-dependency mock server. 100% offline. No data leaves your machine.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 h-150 mb-16">
      
      <div class="flex flex-col bg-slate-900 border border-slate-800 rounded-xl overflow-hidden shadow-lg">
        <div class="bg-slate-800/50 px-4 py-3 border-b border-slate-700 flex justify-between items-center">
          <span class="text-sm font-medium text-slate-300">openapi.json</span>
          <button id="format-btn" class="text-xs text-[#27b4f2] hover:text-white transition-colors">Format JSON</button>
        </div>
        <textarea 
          id="json-input" 
          class="flex-1 w-full bg-transparent text-slate-300 p-4 resize-none focus:outline-none focus:ring-1 focus:ring-[#27b4f2] font-mono text-sm"
          placeholder='{"openapi": "3.0.0", "paths": { ... }}'
        ></textarea>
      </div>

      <div class="flex flex-col bg-slate-900 border border-slate-800 rounded-xl overflow-hidden shadow-lg">
        <div class="bg-slate-800/50 px-4 py-3 border-b border-slate-700 flex justify-between items-center">
          <span class="text-sm font-medium text-slate-300">server.js</span>
          <button id="copy-btn" class="text-xs bg-[#27b4f2] text-slate-900 px-3 py-1 rounded hover:bg-cyan-400 transition-colors font-semibold">
            Copy Code
          </button>
        </div>
        <pre class="flex-1 overflow-auto p-4"><code id="code-output" class="text-emerald-400 font-mono text-sm whitespace-pre-wrap">// Your code will appear here...</code></pre>
      </div>

    </div>

    {/* Visible FAQ Section to match Schema */}
    <section class="mt-16 border-t border-slate-800 pt-12 mb-16">
      <h2 class="text-2xl font-bold text-white mb-8">Frequently Asked Questions</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div>
          <h3 class="font-medium text-slate-200 mb-2">Is this generator AI-powered?</h3>
          <p class="text-sm text-slate-400 leading-relaxed">
            No. This tool uses a deterministic JavaScript parser to transform your OpenAPI paths. Since it doesn't use AI, it works 100% offline and your schema never leaves your browser.
          </p>
        </div>
        <div>
          <h3 class="font-medium text-slate-200 mb-2">What versions of OpenAPI are supported?</h3>
          <p class="text-sm text-slate-400 leading-relaxed">
            The generator currently supports OpenAPI 3.0 and 3.1. It maps parameters, request bodies, and paths directly to standard server syntax.
          </p>
        </div>
        <div>
          <h3 class="font-medium text-slate-200 mb-2">Does it generate a full project structure?</h3>
          <p class="text-sm text-slate-400 leading-relaxed">
            It generates a production-ready boilerplate including necessary imports, middleware setup, and route handlers based on your specific API endpoints.
          </p>
        </div>
      </div>
    </section>

    <RelatedTools currentTool="openapi-mock" />
  </div>
</Layout>

<script>
  // Import the parser utility
  import { generateMockServer } from '../../utils/openapiParser.js';

  const inputArea = document.getElementById('json-input') as HTMLTextAreaElement;
  const outputArea = document.getElementById('code-output') as HTMLElement;
  const copyBtn = document.getElementById('copy-btn') as HTMLButtonElement;
  const formatBtn = document.getElementById('format-btn') as HTMLButtonElement;

  inputArea.addEventListener('input', (e) => {
    const target = e.target as HTMLTextAreaElement; 
    const jsonStr = target.value;
    
    if (!jsonStr.trim()) {
      outputArea.textContent = '// Your code will appear here...';
      return;
    }
    const result = generateMockServer(jsonStr);
    outputArea.textContent = result;
  });

  copyBtn.addEventListener('click', async () => {
    const code = outputArea.textContent;
    if (!code || code.startsWith('// Error')) return;
    
    await navigator.clipboard.writeText(code);
    const originalText = copyBtn.textContent;
    copyBtn.textContent = 'Copied!';
    setTimeout(() => {
      copyBtn.textContent = originalText;
    }, 2000);
  });

  formatBtn.addEventListener('click', () => {
    try {
      const parsed = JSON.parse(inputArea.value);
      inputArea.value = JSON.stringify(parsed, null, 2);
    } catch (e) {
      alert("Invalid JSON format");
    }
  });
</script>