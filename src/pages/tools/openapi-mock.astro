---
// src/pages/tools/openapi-mock.astro
import Layout from '../../layouts/Layout.astro';
import RelatedTools from '../../components/ui/RelatedTools.astro';
import { buildFAQPage } from '../../utils/schema';

const title = "Zero-Dependency OpenAPI Mock Server Generator | SyntaxSnap";
const description = "Generate a vanilla Node.js mock server from any OpenAPI 3.x or FastAPI JSON spec — no Express, no Fastify, no npm install. Paste your spec and get copy-ready Node.js http.createServer() code instantly.";
const slug = "openapi-mock";

const features = [
  "Generates vanilla Node.js mock servers (no Express or Fastify required)",
  "Works with FastAPI, Django Ninja, and any OpenAPI 3.0/3.1 JSON spec",
  "100% offline deterministic parsing (zero server uploads)",
  "Single-file output — copy and run with node server.js instantly",
  "Maps path parameters to standard regex route matching",
  "Zero npm dependencies in the generated output"
];

// SEO: FAQPage — answers supported by on-page generator behavior
const faqSchema = buildFAQPage([
  {
    question: "Does the generated server require Express or any npm packages?",
    answer: "No. The output uses only Node.js's built-in http module and zero external dependencies. You can run it immediately with node server.js on any machine with Node.js 16+ installed, without running npm install."
  },
  {
    question: "How is this different from the OpenAPI to Express generator?",
    answer: "The OpenAPI to Express generator produces Express.js-specific code with router() handlers and middleware. This tool outputs pure vanilla Node.js using the built-in http.createServer() API — ideal for sandboxed environments, Docker containers, or scripts where you cannot install npm packages."
  },
  {
    question: "Can I generate a mock server from a FastAPI or Django Ninja schema?",
    answer: "Yes. FastAPI and Django Ninja both export standard OpenAPI 3.0 JSON at /openapi.json. Paste that JSON directly into the input field and the generator will produce a matching mock server reflecting all your Python API routes and response shapes."
  }
]);
---

<Layout title={title} description={description} isTool={true} features={features} slug={slug}>
  {/* SEO: FAQPage schema */}
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <div class="max-w-6xl mx-auto">
    <div class="mb-10 text-center">
      <h1 class="text-3xl md:text-5xl font-extrabold text-white mb-4 tracking-tight">Zero-Dependency OpenAPI Mock Server</h1>
      <p class="text-slate-400 text-lg max-w-2xl mx-auto">
        Paste your OpenAPI 3.x or FastAPI JSON spec to instantly generate a <strong class="text-white">vanilla Node.js</strong> mock server — no Express, no npm install. Copy and run with <code class="text-cyan-300 bg-slate-800 px-1 rounded">node server.js</code>.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 h-150 mb-16">
      
      <div class="flex flex-col bg-slate-900 border border-slate-800 rounded-xl overflow-hidden shadow-lg">
        <div class="bg-slate-800/50 px-4 py-3 border-b border-slate-700 flex justify-between items-center">
          <span class="text-sm font-medium text-slate-300">openapi.json</span>
          <button id="format-btn" class="text-xs text-[#27b4f2] hover:text-white transition-colors">Format JSON</button>
        </div>
        <textarea 
          id="json-input" 
          class="flex-1 w-full bg-transparent text-slate-300 p-4 resize-none focus:outline-none focus:ring-1 focus:ring-[#27b4f2] font-mono text-sm"
          placeholder='{"openapi": "3.0.0", "paths": { ... }}'
        ></textarea>
      </div>

      <div class="flex flex-col bg-slate-900 border border-slate-800 rounded-xl overflow-hidden shadow-lg">
        <div class="bg-slate-800/50 px-4 py-3 border-b border-slate-700 flex justify-between items-center">
          <span class="text-sm font-medium text-slate-300">server.js</span>
          <button id="copy-btn" class="text-xs bg-[#27b4f2] text-slate-900 px-3 py-1 rounded hover:bg-cyan-400 transition-colors font-semibold">
            Copy Code
          </button>
        </div>
        <pre class="flex-1 overflow-auto p-4"><code id="code-output" class="text-emerald-400 font-mono text-sm whitespace-pre-wrap">// Your code will appear here...</code></pre>
      </div>

    </div>

    {/* Visible FAQ Section to match Schema */}
    <section class="mt-16 border-t border-slate-800 pt-12 mb-16">
      <h2 class="text-2xl font-bold text-white mb-8">Frequently Asked Questions</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div>
          <h3 class="font-medium text-slate-200 mb-2">Does the generated server require Express or any npm packages?</h3>
          <p class="text-sm text-slate-400 leading-relaxed">
            No. The output uses only Node.js's built-in <code class="text-slate-300 bg-slate-800 px-1 rounded">http</code> module and zero external dependencies. Run it immediately with <code class="text-slate-300 bg-slate-800 px-1 rounded">node server.js</code> on any machine with Node.js 16+, without running <code class="text-slate-300 bg-slate-800 px-1 rounded">npm install</code>.
          </p>
        </div>
        <div>
          <h3 class="font-medium text-slate-200 mb-2">How is this different from the OpenAPI to Express generator?</h3>
          <p class="text-sm text-slate-400 leading-relaxed">
            The <a href="/tools/openapi-to-express" class="text-cyan-400 hover:underline">OpenAPI to Express generator</a> produces Express.js-specific code with <code class="text-slate-300 bg-slate-800 px-1 rounded">router()</code> handlers and middleware. This tool outputs pure vanilla Node.js using <code class="text-slate-300 bg-slate-800 px-1 rounded">http.createServer()</code> — ideal for sandboxed environments or containers where you cannot run npm install.
          </p>
        </div>
        <div>
          <h3 class="font-medium text-slate-200 mb-2">Can I use this with a FastAPI or Django Ninja schema?</h3>
          <p class="text-sm text-slate-400 leading-relaxed">
            Yes. FastAPI and Django Ninja both export standard OpenAPI 3.0 JSON at <code class="text-slate-300 bg-slate-800 px-1 rounded">/openapi.json</code>. Paste that JSON into the input field and the generator will produce a matching mock server for all your Python API routes.
          </p>
        </div>
      </div>
    </section>

    <RelatedTools currentTool="openapi-mock" />
  </div>
</Layout>

<script>
  // Import the parser utility
  import { generateMockServer } from '../../utils/openapiParser.js';

  const inputArea = document.getElementById('json-input') as HTMLTextAreaElement;
  const outputArea = document.getElementById('code-output') as HTMLElement;
  const copyBtn = document.getElementById('copy-btn') as HTMLButtonElement;
  const formatBtn = document.getElementById('format-btn') as HTMLButtonElement;

  inputArea.addEventListener('input', (e) => {
    const target = e.target as HTMLTextAreaElement; 
    const jsonStr = target.value;
    
    if (!jsonStr.trim()) {
      outputArea.textContent = '// Your code will appear here...';
      return;
    }
    const result = generateMockServer(jsonStr);
    outputArea.textContent = result;
  });

  copyBtn.addEventListener('click', async () => {
    const code = outputArea.textContent;
    if (!code || code.startsWith('// Error')) return;
    
    await navigator.clipboard.writeText(code);
    const originalText = copyBtn.textContent;
    copyBtn.textContent = 'Copied!';
    setTimeout(() => {
      copyBtn.textContent = originalText;
    }, 2000);
  });

  formatBtn.addEventListener('click', () => {
    try {
      const parsed = JSON.parse(inputArea.value);
      inputArea.value = JSON.stringify(parsed, null, 2);
    } catch (e) {
      alert("Invalid JSON format");
    }
  });
</script>