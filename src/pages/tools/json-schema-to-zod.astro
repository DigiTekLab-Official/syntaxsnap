---
import Layout from '../../layouts/Layout.astro';
import JsonSchemaToZodTool from '../../components/tools/JsonSchemaToZod.tsx';
import RelatedTools from '../../components/ui/RelatedTools.astro';
import { buildFAQPage } from '../../utils/schema';

const title = "JSON Schema to Zod Converter | 100% Client-Side | SyntaxSnap";
const description = "Convert JSON Schema (Draft 4-2020-12) to Zod schemas instantly. Perfect for TypeScript developers. No data ever leaves your browser.";
const slug = "json-schema-to-zod";
const features = [
  "Supports JSON Schema Draft 4, 6, 7, and 2020-12",
  "Handles nested $refs and complex validations",
  "Generates clean, readable TypeScript Zod code",
  "Privacy-first: 100% local browser execution"
];

// SEO: FAQPage
const faqSchema = buildFAQPage([
  {
    question: "Which JSON Schema drafts are supported?",
    answer: "This converter supports JSON Schema Draft 4, Draft 6, Draft 7, and Draft 2020-12. It handles $ref references, nested objects, arrays, enums, and complex validation constraints."
  },
  {
    question: "Is my schema data sent to a server?",
    answer: "No. All conversion happens 100% client-side in your browser. Your JSON Schema definitions never leave your device."
  },
  {
    question: "Can I use the generated Zod schemas in production?",
    answer: "Yes. The generated schemas are clean, idiomatic TypeScript that imports directly from the zod package. They are ready for production use with runtime validation."
  }
]);
---

<Layout title={title} description={description} isTool={true} slug={slug} features={features}>
  {/* SEO: FAQPage schema */}
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  <div class="max-w-6xl mx-auto px-4 py-12">
    <header class="text-center mb-10">
      <h1 class="text-4xl md:text-5xl font-extrabold text-white mb-4 tracking-tight">JSON Schema to Zod</h1>
      <p class="text-slate-400 text-lg max-w-2xl mx-auto">
        Bridge the gap between <span class="text-orange-400">JSON Schema</span> and <span class="text-blue-400">Zod</span>. Transform your legacy API contracts into modern, type-safe validation logic.
      </p>
    </header>

    <JsonSchemaToZodTool client:idle />

    <section class="mt-20 border-t border-slate-800 pt-12">
      <h2 class="text-2xl font-bold text-white mb-6">Why Convert JSON Schema to Zod?</h2>
      <div class="grid md:grid-cols-2 gap-8 text-slate-400">
        <p>
          While JSON Schema is excellent for cross-language interoperability, it lacks the developer experience (DX) of <strong>Zod</strong> when working in TypeScript. This tool allows you to take your existing <code>schema.json</code> files and instantly turn them into runtime validation code.
        </p>
        <p>
          Our converter handles <strong>type mapping</strong>, <strong>regex patterns</strong>, <strong>minimum/maximum values</strong>, and <strong>required fields</strong>, ensuring your Zod schema is a faithful representation of your original contract.
        </p>
      </div>
    </section>

    <RelatedTools currentTool="json-schema-to-zod" />
  </div>
</Layout>