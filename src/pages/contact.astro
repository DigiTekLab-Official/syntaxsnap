---
import Layout from '../layouts/Layout.astro';
import { Mail, MapPin, MessageSquare, Github } from 'lucide-react';

const title = "Contact SyntaxSnap | Developer Support & Tool Requests";
const description = "Have a tool request or found a bug? Get in touch with the SyntaxSnap team in Cuddalore. We respond to every developer message.";
---

<Layout title={title} description={description}>
  <div class="max-w-4xl mx-auto py-16 md:py-24 px-6 text-center">
    
    <div class="inline-flex p-4 rounded-3xl bg-indigo-500/10 text-indigo-400 mb-8 animate-bounce-subtle">
      <MessageSquare className="w-8 h-8 md:w-10 md:h-10" />
    </div>
    
    <h1 class="text-4xl md:text-5xl font-extrabold text-white mb-6 tracking-tight">
      Let's Build Together
    </h1>
    
    <p class="text-slate-400 text-lg md:text-xl mb-12 max-w-2xl mx-auto leading-relaxed">
      Have a tool request? Found a bug? Or just want to talk shop? <br class="hidden md:block"/>
      Our team is based in Cuddalore, and we're always listening.
    </p>

    <div class="max-w-2xl mx-auto space-y-8">
      <div class="group bg-slate-900/40 border border-slate-800 p-8 md:p-12 rounded-[2.5rem] transition-all duration-300 hover:border-indigo-500/40 hover:bg-slate-900/60 shadow-2xl shadow-indigo-500/5">
        <div class="flex justify-center mb-6">
          <div class="p-3 bg-slate-800 rounded-xl group-hover:bg-indigo-500/20 group-hover:text-indigo-400 transition-colors">
            <Mail className="w-6 h-6" />
          </div>
        </div>
        <p class="text-slate-400 uppercase tracking-[0.2em] text-[10px] md:text-xs font-bold mb-4">
          Direct Line
        </p>
        <a 
          href="mailto:contact@syntaxsnap.com" 
          class="text-xl sm:text-2xl md:text-3xl font-mono text-white hover:text-indigo-400 transition-colors break-all underline decoration-slate-700 underline-offset-8 decoration-2 hover:decoration-indigo-500"
        >
          contact@syntaxsnap.com
        </a>
        <p class="mt-8 text-slate-400 text-sm">
          Average response time: <span class="text-slate-300">Under 24 hours</span>
        </p>
      </div>

      <div class="flex flex-col md:flex-row items-center justify-center gap-6 text-slate-400 text-sm">
        <div class="flex items-center gap-2">
          <MapPin className="w-4 h-4 text-red-400/60" />
          <span>Cuddalore, Tamil Nadu, India</span>
        </div>
        <div class="hidden md:block w-1 h-1 bg-slate-800 rounded-full"></div>
        <a href="https://github.com/DigiTekLab-Official" target="_blank" class="flex items-center gap-2 hover:text-white transition-colors">
          <Github className="w-4 h-4" />
          <span>Follow DigiTekLab</span>
        </a>
      </div>
    </div>
  </div>
</Layout>

<style>
  @keyframes bounce-subtle {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-5px); }
  }
  .animate-bounce-subtle {
    animation: bounce-subtle 3s ease-in-out infinite;
  }
</style>