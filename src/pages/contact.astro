---
import Layout from '../layouts/Layout.astro';
import { Mail, MapPin, MessageSquare } from 'lucide-react';

const title = "Contact SyntaxSnap | Developer Support & Tool Requests";
const description = "Have a tool request or found a bug? Get in touch with the SyntaxSnap team in Cuddalore. We respond to every developer message.";
---

<Layout title={title} description={description}>
  <div class="max-w-3xl mx-auto py-20 px-4 text-center">
    <div class="inline-flex p-4 rounded-2xl bg-indigo-500/10 text-indigo-400 mb-6">
      <MessageSquare className="w-8 h-8" />
    </div>
    
    <h1 class="text-4xl font-extrabold text-white mb-6">Get in Touch</h1>
    <p class="text-slate-400 text-lg mb-12 max-w-xl mx-auto leading-relaxed">
      Have a tool request? Found a bug? Or just want to say hi? <br class="hidden md:block"/>
      We are building this for you, and we respond to every message.
    </p>

    <div class="grid gap-6">
      <div class="bg-slate-900/50 border border-slate-800 p-10 rounded-3xl transition-colors hover:border-indigo-500/30">
        <div class="flex justify-center mb-4">
          <Mail className="w-5 h-5 text-indigo-400" />
        </div>
        <p class="text-slate-500 uppercase tracking-widest text-xs font-bold mb-3">Primary Support</p>
        <a 
          href="mailto:contact@syntaxsnap.com" 
          class="text-2xl md:text-3xl font-mono text-white hover:text-indigo-400 transition-colors break-all"
        >
          contact@syntaxsnap.com
        </a>
      </div>

      <div class="flex items-center justify-center gap-2 text-slate-500 text-sm">
        <MapPin className="w-4 h-4" />
        <span>Cuddalore, Tamil Nadu, India</span>
      </div>
    </div>
  </div>
</Layout>