---
import Layout from '../layouts/Layout.astro';
import { 
  GlassWater, 
  Database, 
  Palette, 
  Search, 
  FileCode2, 
  ArrowRight 
} from 'lucide-react';

const tools = [
  {
    title: "Glassmorphism Generator",
    desc: "Generate frosted glass CSS effects instantly.",
    href: "/tools/glass-generator",
    icon: GlassWater,
    status: "Live"
  },
  {
    title: "JSON to Zod Converter",
    desc: "Infer Zod schemas from raw JSON objects.",
    href: "/tools/json-to-zod",
    icon: Database,
    status: "Live"
  },
  {
    title: "Mesh Gradient Studio",
    desc: "Create beautiful, aurora-style mesh gradients.",
    href: "/tools/mesh-gradient",
    icon: Palette,
    status: "Live"
  },
  {
    title: "Regex Tester",
    desc: "Test and debug JavaScript regex patterns.",
    href: "/tools/regex-tester",
    icon: Search,
    status: "Live"
  },
  {
    title: "SVG to JSX",
    desc: "Transform SVG code into React components.",
    href: "/tools/svg-to-jsx",
    icon: FileCode2,
    status: "Live"
  }
];
---

<Layout title="SyntaxSnap â€“ Privacy-First Developer Tools">
  <div class="flex flex-col items-center justify-center py-20 text-center">
    
    <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-indigo-900/30 border border-indigo-500/30 text-indigo-300 text-xs font-medium mb-8 animate-fade-in">
      <span class="relative flex h-2 w-2">
        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-indigo-400 opacity-75"></span>
        <span class="relative inline-flex rounded-full h-2 w-2 bg-indigo-500"></span>
      </span>
      v1.0 is Live
    </div>

    <h1 class="text-5xl md:text-7xl font-extrabold text-white tracking-tight mb-6 max-w-4xl">
      Code fast. <br class="hidden md:block" />
      <span class="text-transparent bg-clip-text bg-linear-to-r from-indigo-400 to-cyan-400">
        Stay private.
      </span>
    </h1>

    <p class="text-lg md:text-xl text-slate-400 max-w-2xl mb-10 leading-relaxed">
      A privacy-first suite of developer tools that run entirely in your browser. <br class="hidden md:block" />
      No servers. No tracking. Just speed.
    </p>

    <div>
      <a href="#tools" class="bg-indigo-600 hover:bg-indigo-500 text-white px-8 py-3.5 rounded-lg font-medium transition-all hover:scale-105 flex items-center gap-2 shadow-lg shadow-indigo-500/20">
        Explore Tools <ArrowRight className="w-4 h-4" />
      </a>
    </div>

  </div>

  <div id="tools" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 py-12">
    {tools.map((tool) => (
      <a href={tool.href} class="group relative bg-slate-900/50 border border-slate-800 hover:border-indigo-500/50 rounded-2xl p-6 transition-all hover:shadow-2xl hover:shadow-indigo-500/10 hover:-translate-y-1">
        <div class="absolute top-6 right-6">
           <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-emerald-500/10 text-emerald-400 border border-emerald-500/20">
             {tool.status}
           </span>
        </div>
        
        <div class="mb-4 p-3 bg-slate-800 rounded-xl w-fit group-hover:bg-indigo-500/20 group-hover:text-indigo-400 transition-colors">
          {(() => { const Icon = tool.icon; return <Icon className="w-6 h-6" /> })()}
        </div>
        
        <h2 class="text-xl font-bold text-white mb-2 group-hover:text-indigo-400 transition-colors">
          {tool.title}
        </h2>
        
        <p class="text-slate-400 text-sm leading-relaxed">
          {tool.desc}
        </p>
      </a>
    ))}
  </div>
</Layout>