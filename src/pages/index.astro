---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import ToolCard from '../components/ui/ToolCard.astro';
import { TOOLS } from '../config/tools';
import { ShieldCheck, ArrowRight, Zap } from 'lucide-astro';

const featuredIds = ['aurora-gradient', 'json-schema-to-zod', 'ai-mock-generator', 'pydantic-to-zod'];
const featuredTools = TOOLS.filter(t => featuredIds.includes(t.id))
  .sort((a, b) => featuredIds.indexOf(a.id) - featuredIds.indexOf(b.id));
---

<Layout title="SyntaxSnap – Privacy-First Developer Tools">
  <div class="pt-16 pb-12 px-4 max-w-6xl mx-auto text-center md:text-left">
    <div class="flex flex-col md:flex-row items-center justify-between gap-12">
      <div class="flex-1 max-w-2xl">
        <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-slate-900/50 border border-slate-700 text-slate-300 text-sm font-medium mb-6 animate-fade-in">
          <span class="relative flex h-2.5 w-2.5">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-emerald-500"></span>
          </span>
          v1.2 Live: Performance Update
        </div>

        <h1 class="text-4xl md:text-6xl font-extrabold text-white tracking-tight mb-6 leading-tight">
          Developer tools that <br class="hidden md:block" />
          <span class="text-transparent bg-clip-text bg-linear-to-r from-indigo-400 to-cyan-400">respect your privacy.</span>
        </h1>

        <p class="text-lg text-slate-300 mb-8 leading-relaxed max-w-lg mx-auto md:mx-0">
          A local-first workbench for modern web development. <br />
          <strong>No servers. No tracking. Just instant utilities.</strong>
        </p>

        <div class="flex flex-wrap items-center justify-center md:justify-start gap-4 text-sm text-slate-400 font-medium">
          <span class="flex items-center gap-2"><Zap class="w-4 h-4 text-yellow-400" /> Zero Latency</span>
          <span class="hidden md:inline text-slate-600">•</span>
          <span class="flex items-center gap-2"><ShieldCheck class="w-4 h-4 text-emerald-400" /> 100% Client-Side</span>
        </div>
      </div>

      <div class="flex-1 w-full max-w-lg">
         <h2 class="sr-only">Quick Access Tools</h2>
         <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
            {featuredTools.map((tool) => {
              const Icon = tool.icon;
              return (
                <a href={tool.href} class="flex items-start gap-3 p-4 rounded-xl bg-slate-900/40 border border-slate-800 hover:border-indigo-500/40 hover:bg-slate-900 transition-all group">
                  <div class={`p-2 rounded-lg ${tool.bg} ${tool.color} shrink-0`}>
                    <Icon class="w-5 h-5" />
                  </div>
                  <div>
                    <h3 class="text-white font-bold text-sm group-hover:text-indigo-400 transition-colors flex items-center gap-2">
                      {tool.title}
                      {tool.status === 'New' && <span class="text-sm bg-indigo-500 text-white px-1.5 py-0.5 rounded font-bold uppercase tracking-wider">New</span>}
                    </h3>
                    <p class="text-slate-300 text-xs mt-1 leading-snug line-clamp-2">{tool.desc}</p>
                  </div>
                </a>
              );
            })}
            <a href="#all-tools" class="sm:col-span-2 p-3 rounded-xl border border-dashed border-slate-700 text-slate-300 text-sm font-medium hover:text-white hover:border-slate-500 hover:bg-slate-900/30 transition-all flex items-center justify-center gap-2">
              View All {TOOLS.length} Utilities <ArrowRight class="w-4 h-4" />
            </a>
         </div>
      </div>
    </div>
  </div>

  <div class="w-full h-px bg-linear-to-r from-transparent via-slate-800 to-transparent my-8"></div>

  <div id="all-tools" class="max-w-6xl mx-auto px-4 py-12">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-2xl font-bold text-white">All Utilities</h2>
      <span class="text-sm text-slate-300">{TOOLS.length} tools available</span>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
      {TOOLS.map((tool) => (
        <ToolCard tool={tool} />
      ))}
    </div>
  </div>
</Layout>