---
// src/layouts/Layout.astro
import '../styles/global.css';
import { Wrench, Info, Mail, ShieldCheck } from 'lucide-astro';
import Logo from '../components/Logo.astro';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "SyntaxSnap - Privacy-First Developer Tools",
  description = "A privacy-first suite of developer tools that run entirely in your browser. No servers. No tracking." 
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, "https://syntaxsnap.com").toString();
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://syntaxsnap.com/og-preview.jpg" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://syntaxsnap.com/og-preview.jpg" />

    <script is:inline>
        (function(c,l,a,r,i,t,y){
            c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
            t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
            y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
        })(window, document, "clarity", "script", "viplajyvf3");
    </script>

    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "WebSite",
          "@id": "https://syntaxsnap.com/#website",
          "url": "https://syntaxsnap.com",
          "name": "SyntaxSnap",
          "alternateName": ["Syntax Snap", "DigiTekLab SyntaxSnap"],
          "description": "Privacy-first suite of developer tools.",
          "publisher": { "@id": "https://syntaxsnap.com/#organization" }
        },
        {
          "@type": "Organization",
          "@id": "https://syntaxsnap.com/#organization",
          "name": "SyntaxSnap",
          "url": "https://syntaxsnap.com",
          "logo": {
            "@type": "ImageObject",
            "url": "https://syntaxsnap.com/logo.png",
            "width": 512,
            "height": 512
          },
          "sameAs": ["https://github.com/DigiTekLab-Official"],
          "contactPoint": {
            "@type": "ContactPoint",
            "email": "contact@syntaxsnap.com",
            "contactType": "customer support"
          }
        }
      ]
    }
    </script>
  </head>
  
  <body class="bg-slate-950 text-slate-200 min-h-screen font-sans antialiased flex flex-col selection:bg-indigo-500/30">
    
    <header class="border-b border-slate-800 bg-slate-950/80 backdrop-blur-md sticky top-0 z-50">
      <div class="max-w-6xl mx-auto px-4 h-16 flex items-center justify-between">
        
        <a href="/" class="flex items-center gap-3 group" aria-label="SyntaxSnap home">
          <div class="group-hover:rotate-12 transition-transform duration-300">
             <Logo class="w-8 h-8" />
          </div>
          <span class="text-xl font-bold tracking-tight text-white">
            Syntax<span class="text-indigo-400">Snap</span>
          </span>
        </a>

        <nav aria-label="Main navigation">
          <ul class="flex gap-4 md:gap-8 text-sm font-medium text-slate-400 list-none m-0 p-0">
            <li>
              <a href="/#tools" class="hover:text-white transition-colors flex items-center gap-1.5 py-2" aria-label="View Tools">
                <Wrench class="w-4 h-4" /> <span class="hidden sm:inline">Tools</span>
              </a>
            </li>
            <li>
              <a href="/about" class="hover:text-white transition-colors flex items-center gap-1.5 py-2" aria-label="About SyntaxSnap">
                <Info class="w-4 h-4" /> <span class="hidden sm:inline">About</span>
              </a>
            </li>
            <li>
              <a href="/contact" class="hover:text-white transition-colors flex items-center gap-1.5 py-2" aria-label="Contact Support">
                <Mail class="w-4 h-4" /> <span class="hidden sm:inline">Contact</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </header>

    <main class="w-full max-w-6xl mx-auto px-4 py-8 md:py-12 flex-1 animate-in fade-in duration-700">
      <slot />
    </main>

    <footer class="border-t border-slate-800 bg-slate-950 mt-auto">
      <div class="max-w-6xl mx-auto px-4 py-16">
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-12 mb-12">
              
              <div class="col-span-1 md:col-span-2">
                  <span class="text-xl font-bold text-white tracking-tight">Syntax<span class="text-indigo-500">Snap</span></span>
                  <p class="mt-4 text-sm text-slate-400 max-w-xs leading-relaxed">
                      High-performance, local-first utilities for modern developers. Built with privacy as a priority and speed as a requirement.
                  </p>
              </div>
  
              <div>
                  <h2 class="text-xs font-bold text-slate-500 uppercase tracking-widest mb-4">Utilities</h2>
                  <ul class="space-y-3 text-sm text-slate-400 font-mono">
                      <li><a href="/tools/glass-generator" class="hover:text-indigo-400 transition-colors">Glass Gen</a></li>
                      <li><a href="/tools/json-to-zod" class="hover:text-indigo-400 transition-colors">JSON → Zod</a></li>
                      <li><a href="/tools/mesh-gradient" class="hover:text-indigo-400 transition-colors">Mesh Gradient</a></li>
                      <li><a href="/tools/regex-tester" class="hover:text-indigo-400 transition-colors">Regex Tester</a></li>
                      <li><a href="/tools/svg-to-jsx" class="hover:text-indigo-400 transition-colors">SVG → JSX</a></li>
                  </ul>
              </div>
  
              <div>
                <h3 class="text-xs font-bold text-slate-500 uppercase tracking-widest mb-4">Company</h3>
                <ul class="space-y-3 text-sm text-slate-400">
                    <li><a href="/about" class="hover:text-indigo-400 transition-colors">Our Story</a></li>
                    <li><a href="/privacy" class="hover:text-indigo-400 transition-colors">Privacy</a></li>
                    <li><a href="/terms" class="hover:text-indigo-400 transition-colors">Terms</a></li>
                </ul>
              </div>
          </div>
          
          <div class="border-t border-slate-900 pt-8 flex flex-col md:flex-row justify-between items-center gap-6 text-[11px] text-slate-500">
              <div class="flex items-center gap-2">
                <ShieldCheck class="w-4 h-4 text-indigo-500/50" />
                <p>&copy; {new Date().getFullYear()} SyntaxSnap. All rights reserved.</p>
              </div>
              <p class="flex items-center gap-1.5">
                Built with ❤️ in <span class="text-slate-300 font-medium">Cuddalore</span> for the global community.
              </p>
          </div>
      </div>
    </footer>

  </body>
</html>