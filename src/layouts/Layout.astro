---
// src/layouts/Layout.astro
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { 
  title, 
  description = "Developer tools for the modern web. Built for speed and privacy." 
} = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-slate-950 text-slate-200 min-h-screen font-sans antialiased flex flex-col">
    
    <header class="border-b border-slate-800 bg-slate-950/80 backdrop-blur-md sticky top-0 z-50">
      <div class="max-w-6xl mx-auto px-4 h-16 flex items-center justify-between">
        <a href="/" class="text-xl font-bold tracking-tight text-white">
          Syntax<span class="text-indigo-500">Snap</span>
        </a>
        <div class="flex gap-4 text-sm font-medium text-slate-400">
          <a href="/tools/glass-generator" class="hover:text-white transition-colors">Tools</a>
          <a href="/about" class="hover:text-white transition-colors">About</a>
        </div>
      </div>
    </header>

    <main class="w-full max-w-6xl mx-auto px-4 py-8 flex-1">
      <slot />
    </main>

    <footer class="border-t border-slate-800 bg-slate-950 mt-auto">
      <div class="max-w-6xl mx-auto px-4 py-12">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
              
              <div>
                  <span class="text-lg font-bold text-white">Syntax<span class="text-indigo-500">Snap</span></span>
                  <p class="mt-4 text-sm text-slate-400 max-w-xs">
                      The modern developer's workbench. Local-first tools for faster, safer coding.
                  </p>
              </div>
  
              <div>
                  <h3 class="font-semibold text-white mb-4">Popular Tools</h3>
                  <ul class="space-y-2 text-sm text-slate-400">
                      <li><a href="/tools/glass-generator" class="hover:text-indigo-400 transition-colors">CSS Glass Generator</a></li>
                      <li><a href="/tools/json-to-zod" class="hover:text-indigo-400 transition-colors">JSON Converter</a></li>
                      <li><span class="opacity-50 cursor-not-allowed">Regex Visualizer (Coming Soon)</span></li>
                  </ul>
              </div>
  
              <div>
                  <h3 class="font-semibold text-white mb-4">Company</h3>
                  <ul class="space-y-2 text-sm text-slate-400">
                      <li><a href="/about" class="hover:text-indigo-400 transition-colors">About Us</a></li>
                      <li><a href="https://github.com" target="_blank" rel="noopener noreferrer" class="hover:text-indigo-400 transition-colors">GitHub</a></li>
                  </ul>
              </div>
          </div>
          
          <div class="border-t border-slate-800 pt-8 text-center text-xs text-slate-500">
              <p>&copy; {new Date().getFullYear()} SyntaxSnap. Built with Astro & React.</p>
          </div>
      </div>
    </footer>

  </body>
</html>